# EditorConfig (http://editorconfig.org/)
root = true

# Default Settings
[*]
charset = utf-8
end_of_line = lf
tab_width = 2
indent_size = 2
indent_style = space
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[*.{sv,svh,v,vg}]
max_line_length = 100

[{Makefile,Makefile.*,*.mk,*.mk.*}]
indent_style = tab

[*.py]
indent_size = 4
